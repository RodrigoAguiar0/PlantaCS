<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="plantaplus.plantaplus.MainActivity">

    <ImageView
        android:id="@+id/Background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/planta2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button2"
        android:layout_width="165dp"
        android:layout_height="78dp"
        android:text="Adicionar planta pessoal"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="92dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="165dp"
        android:layout_height="79dp"
        android:text="Ver banco de plantas"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="170dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="166dp"
        android:layout_height="79dp"
        android:text="Ver plantas pessoais"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="249dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="165dp"
        android:layout_height="51dp"
        android:text="Receber notificação de planta especifica"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="328dp" />


</android.support.constraint.ConstraintLayout>